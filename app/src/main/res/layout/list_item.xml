<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"

    >


    <android.support.v7.widget.CardView



        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >


        <LinearLayout
            android:id="@+id/llListItemTop"
            android:padding="14dp"

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout

                android:id="@+id/llListItemMiddle"

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:src="@drawable/logo_v1" />
                <TextView
                    android:textColor="@color/colorRealBlack"
                    android:padding="7dp"


                    android:id="@+id/tvUsernameLI"
                    android:text="Username"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                     />

            </LinearLayout>



                <TextView

                    android:id="@+id/tvPostLI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Post "
                    android:textSize="24dp"
                    />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:paddingLeft="4dp"
                >

                <TextView

                    android:id="@+id/tvTimeLI"
                    android:text="Time"
                    android:paddingTop="10dp"
                    android:textSize="12dp"
                    android:layout_gravity="center_horizontal"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />



                <TextView
                    android:textSize="12dp"
                    android:layout_gravity="end"
                    android:id="@+id/tvDateLI"
                    android:text="0000-00-00"
                    android:paddingLeft="25dp"
                    android:paddingTop="10dp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>


            <LinearLayout
                android:paddingLeft="4dp"
                android:id="@+id/llListItemBottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="7dp"
                android:paddingBottom="14dp"
                android:layout_gravity="center"

                >

                <ImageView

                    android:id="@+id/imgLikePostLI"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_thumb_up_black_24dp" />

                <TextView
                    android:id="@+id/tvLikePostLI"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Like Post"
                    android:layout_gravity="center_horizontal"
                    android:paddingLeft="7dp"
                    android:textSize="14dp"
                   android:textStyle="bold"
                    android:paddingRight="25dp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_comment_black_24dp" />

                <TextView
                    android:id="@+id/tvAddCommentLI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingLeft="7dp"
                    android:paddingRight="25dp"
                    android:textStyle="bold"
                    android:text="Add comment"
                    android:textSize="14dp"

                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <ImageView

                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_send_black_24dp" />

                <TextView
                    android:id="@+id/tvSharePostLI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingLeft="7dp"
                    android:text="share"
                    android:textSize="14dp"
                    android:textStyle="bold"
                   />



            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>