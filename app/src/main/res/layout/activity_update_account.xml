<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.wellrounder.UpdateAccount">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical"
        >




        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/logo_v1"
            android:id="@+id/imgUserProfPicUA"
            android:layout_width="78dp"
            android:layout_height="75dp" />
        <TextView
            android:id="@+id/tvChangePictureUpdateProfile"
            android:textColor="@color/colorRealBlack"
            android:textSize="16dp"
            android:paddingTop="7dp"
            android:layout_gravity="center"
            android:text="Change Picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:paddingTop="16dp"
            android:text="Username"
            android:textColor="@color/colorRealBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:hint="Username"
            android:id="@+id/etUserNameUpdateProf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Email"
            android:paddingTop="16dp"
            android:textColor="@color/colorRealBlack"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/etEmailUpdateAccount"
            android:hint="email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Phonenumber"
            android:paddingTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/colorRealBlack"
            />
        <EditText
            android:id="@+id/etPhoneNumberUpdateProfile"
            android:hint="Phone Number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            >

            <TextView
                android:textColor="@color/colorRealBlack"
                android:text="First"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:textColor="@color/colorRealBlack"
                android:text="Middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="125dp"/>

            <TextView
                android:textColor="@color/colorRealBlack"
                android:text="Last"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="100dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="7dp"
            >

            <EditText
                android:id="@+id/etFirstnameUpdateProfile"
                android:hint="First"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etMiddleNameUpdateProfile"
                android:layout_gravity="center_horizontal"
                android:hint="Middle"
                android:layout_width="125dp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/etLastNameUpdateProfile"
                android:hint="Last"
                android:layout_width="125dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="7dp"

            >


            <Button
                android:layout_gravity="center"
                android:id="@+id/btnUpdateProfileUpdateProf"
                android:hint="Update"

                android:background="@drawable/round_button"
                android:layout_width="300dp"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </LinearLayout>



</LinearLayout>
