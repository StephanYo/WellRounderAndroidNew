<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout

        android:background="@drawable/border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:textStyle="bold"
            android:id="@+id/tvInviteFriendsNavSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Invite Friends"
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/border"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:textStyle="bold"
            android:id="@+id/tvEditProfileNavSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"

            android:text="Edit Profile"
            android:textSize="16dp" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/tvInvestingNavSettings"
            android:text="Investing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="16dp" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/tvAccountPrivacyNavSettings"
            android:text="Account Privacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"

            android:textSize="16dp" />



    </LinearLayout>

    <LinearLayout
        android:background="@drawable/border"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        >
        <TextView
            android:textStyle="bold"
            android:id="@+id/tvAboutNavSettings"
            android:text="About"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="16dp"
            />
        <TextView
            android:textStyle="bold"
            android:id="@+id/tvNotificationsNavSettings"
            android:text="Notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="16dp"/>

        <TextView
            android:textStyle="bold"
            android:id="@+id/tvTermsOfServiceNavSettings"
            android:text="Terms of Service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="16dp"
            />

    </LinearLayout>
</LinearLayout>