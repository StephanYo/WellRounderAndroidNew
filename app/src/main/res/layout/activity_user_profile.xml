<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.admin.wellrounder.UserProfile">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:weightSum="1">

        <ImageView
            android:id="@+id/userImageProf"
            android:layout_width="91dp"
            android:layout_height="94dp"
            android:src="@drawable/logo_v1" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="7dp">

        <TextView
            android:id="@+id/tvUsernameProf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="username"
            android:textColor="@color/colorRealBlack"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvFirstLastProf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text="firstlast"
            android:textSize="16dp" />


        <TextView
            android:id="@+id/tvBioProf"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="5dp"
            android:text="Bio"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btnEditProfileProf"
            android:background="@drawable/round_button"
            android:hint="Edit Profile"
            android:layout_width="165dp"
            android:layout_height="29dp"
            android:visibility="gone"/>


            />


    </LinearLayout>




</LinearLayout>

