<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
      >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="7dp">







            <TextView
                android:id="@+id/tvImgLinkRSS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="img url"
                android:visibility="gone"/>

            <ImageView

                android:id="@+id/imgThumbRSS"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:fadingEdge="horizontal"
                android:padding="7dp"

                android:src="@drawable/logo_v1" />
            <TextView
                android:id="@+id/tvTittleRssRow"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="7dp"
                android:text="Title"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/colorRealBlack"

                />


            <TextView
                android:id="@+id/tvContentRssReader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="7dp"
                android:paddingTop="7dp"
                android:text="Content"
                android:textStyle="bold"
                android:textSize="14dp"/>

            <TextView

                android:id="@+id/tvDateOfPubRssRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="7dp"
                android:textSize="10dp"
                android:text="Date of Publication"
               />




        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>














